# 全局设置
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=5
markup=pango
color=#FFD700  # 全局文字颜色（黄色）
border=#FFD700 # 边框颜色（黄色）

[cpu_usage]
command=~/.config/i3blocks/cpu
interval=2
label=⚙ 
border=#FFD700

[network]
command=~/.config/i3blocks/network
interval=5
border=#FFD700

########
[time]
command=date '+%H:%M %d-%m-%Y'
interval=1
label=🕒 
border=#FFD700

########
[disk_usage]
command=~/.config/i3blocks/disk_usage
interval=30
label=📁 
border=#FFD700